<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="praytime@erho.dev">
  <schema id="org.gnome.shell.extensions.praytime" path="/org/gnome/shell/extensions/praytime/">

    <!-- Konum Ayarları -->
    <key name="location-id" type="i">
      <default>9185</default>
      <summary>Konum ID</summary>
      <description>Diyanet API konum kimliği (varsayılan: Ağrı = 9185)</description>
    </key>

    <key name="city-name" type="s">
      <default>'Ağrı'</default>
      <summary>Şehir adı</summary>
      <description>Gösterilecek şehir adı</description>
    </key>

    <key name="region-name" type="s">
      <default>'Ağrı'</default>
      <summary>İlçe adı</summary>
      <description>Gösterilecek ilçe adı</description>
    </key>

    <!-- Bildirim Ayarları -->
    <key name="notifications-enabled" type="b">
      <default>true</default>
      <summary>Bildirimleri etkinleştir</summary>
      <description>Namaz vakti bildirimleri gösterilsin mi</description>
    </key>

    <key name="notify-before-minutes" type="i">
      <default>5</default>
      <summary>Kaç dakika önce bildir</summary>
      <description>Vakit girmeden kaç dakika önce bildirim gösterilecek</description>
      <range min="1" max="30"/>
    </key>

    <key name="notify-on-time" type="b">
      <default>true</default>
      <summary>Vakit girince bildir</summary>
      <description>Vakit tam girdiğinde bildirim gösterilsin mi</description>
    </key>

    <!-- Gösterim Ayarları -->
    <key name="show-countdown" type="b">
      <default>true</default>
      <summary>Geri sayım göster</summary>
      <description>Sonraki vakte kalan süreyi göster</description>
    </key>

    <key name="panel-position" type="s">
      <default>'right'</default>
      <summary>Panel konumu</summary>
      <description>Extension panelde nerede gösterilecek (left, center, right)</description>
    </key>

  </schema>
</schemalist>
